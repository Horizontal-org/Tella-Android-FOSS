<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="ring" android:innerRadius="0dp"
            android:thicknessRatio="2.1"
            android:useLevel="false" >

            <solid android:color="@color/wa_dialog_gray" />
            <stroke android:width="2px" android:color="@color/wa_dialog_gray" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="ring" android:innerRadius="0dp"
            android:thicknessRatio="2.1"
            android:useLevel="false" >

        <solid android:color="@color/calc_orange_skin_orange" />
            <stroke android:width="2px" android:color="@color/calc_orange_skin_orange" />
        </shape>
    </item>

</selector>