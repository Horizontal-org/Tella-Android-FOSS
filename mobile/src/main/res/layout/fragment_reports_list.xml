<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wa_purple"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragment.uwazi.DraftsUwaziFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_reports_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline55h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <org.hzontal.shared_ui.textviews.CenterMessageTextView
        android:id="@+id/textView_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline55h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:topImg="@drawable/ic_reports_settings"
        app:textMessage="@string/Uwazi_Draft_Entities_Empty_Description"
        />



</androidx.constraintlayout.widget.ConstraintLayout>